root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[{*.markdown,*.md}]
indent_size = 4

[*.toml]
indent_size = 4

[{*.js,*.ts,*.ts.in}]
max_line_length = 80

[*.sh]
indent_size = 4