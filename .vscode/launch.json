{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["build", "--bin=server"]
      },
      "args": [],
      "cwd": "${workspaceFolder}/server",
      "sourceMap": {
        "/rustc": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
      }
    },
    {
      "name": "Debug Web Client",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}/client",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "Debug Web Client (Production)",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}/client/web/dist/web",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "Attach to Server",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:PickProcess}",
      "sourceMap": {
        "/rustc": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Debug Server", "Debug Client"]
    },
    {
      "name": "Debug Full Stack (Production)",
      "configurations": ["Debug Server", "Debug Client (Production)"]
    }
  ]
}
